      <TextField fx:id="quantityTextField" layoutX="289.0" layoutY="115.0" promptText="Quantity" />
      <TextField fx:id="unitTextField" layoutX="289.0" layoutY="150.0" promptText="Unit" />
      <Button fx:id="saveRecipeButton" layoutX="583.0" layoutY="415.0" mnemonicParsing="false" onAction="#onSaveRecipeButtonClick" prefHeight="42.0" prefWidth="107.0" style="-fx-background-color: #ebcf00;" text="Save Recipe" textFill="WHITE">
