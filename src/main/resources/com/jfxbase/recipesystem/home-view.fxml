<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jfxbase.recipesystem.controllers.HomeView">
   <children>
      <ButtonBar prefHeight="46.0" prefWidth="600.0" style="-fx-background-color: #ebcf00;">
         <buttons>
            <Button mnemonicParsing="false" prefHeight="42.0" prefWidth="160.0" style="-fx-background-color: #ebcf00;" styleClass="nav-link" stylesheets="@styles.css" text="Home" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="shoppingListButton" mnemonicParsing="false" onAction="#onShoppingListButtonClick" prefHeight="40.0" prefWidth="133.0" style="-fx-background-color: #ebcf00;" styleClass="nav-item" stylesheets="@styles.css" text="Shopping List" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button id="myRecipesButton" fx:id="myRecipesButton" mnemonicParsing="false" onAction="#onMyRecipesButtonClick" prefHeight="42.0" prefWidth="81.0" style="-fx-background-color: #ebcf00;" text="My Recipes" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button id="logOutButton" fx:id="logOutButton" mnemonicParsing="false" onAction="#onLogOutButtonClick" prefHeight="42.0" prefWidth="74.0" style="-fx-background-color: #ebcf00;" text="Log Out" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
